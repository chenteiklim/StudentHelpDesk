
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="410dp"
        android:layout_height="750dp"
        android:orientation="vertical"
        android:background=" #A1CAF1"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/textView"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Student Help Desk" />

            <Button
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                app:backgroundTint="@null"
                android:background="#00FFFF"
                android:textColor="#000000"
                android:text="Home" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Search..."
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:contentDescription="Search input field"
                android:background="@android:drawable/edit_text"
                android:drawableStart="@android:drawable/ic_menu_search"/>

            <Button
                android:id="@+id/searchBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="0dp"
                app:backgroundTint="@null"
                android:background="#00FFFF"
                android:textColor="#000000"
                android:text="Search" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="550dp"
                android:background="#00FFFF"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/book" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_marginLeft="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/appointment" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appointment" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/notification" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification" />
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/qanda" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Q and A" />
                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/resource" />
                <TextView
                    android:id="@+id/textView7"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resource" />
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/rating" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_marginLeft="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rating" />


            </LinearLayout>
            <ScrollView
                android:layout_width="280dp"
                android:layout_height="500dp">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="280dp"
                android:layout_height="500dp"
                android:orientation="vertical"
                android:background="@drawable/border_background"
                >
                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/email"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="22dp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Email:" />

                    <EditText
                        android:id="@+id/emailInput"
                        android:layout_marginTop="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textEmailAddress" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/studentID"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="22dp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Student ID:" />

                    <EditText
                        android:id="@+id/studentIDInput"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textEmailAddress" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lecturerName"
                        android:layout_marginLeft="12dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="lecturerName:" />
                    <RadioGroup
                        android:id="@+id/lecturerRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioLecturer1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"

                            android:text="Mr.Shariman" />

                        <RadioButton
                            android:id="@+id/radioLecturer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"

                            android:text="Miss.Vimala" />

                        <RadioButton
                            android:id="@+id/radioLecturer3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"

                            android:text="Miss.Usha" />

                        <!-- Add more RadioButton options for other lecturers as needed -->
                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:text="Date:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/dateInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textEmailAddress" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/time"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="22dp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Time:" />

                    <EditText
                        android:id="@+id/timeInput"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textEmailAddress" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="22dp"
                        android:text="Description:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/descriptionInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textEmailAddress" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/createBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="80dp"
                        android:background="#00FFFF"
                        android:text="Create Appointment"
                        android:textColor="#000000"
                        app:backgroundTint="@null" />
                </LinearLayout>
            </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </RelativeLayout>
